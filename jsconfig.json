{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "paths": {
      "@src/*": ["./src/*"], // Đặt alias cho thư mục src
      "@shared/*": ["./src/shared/*"],
      "@utils": ["./src/utils"]
    }
  },
  "exclude": [
    "node_modules" // Đừng bắt VSCode nó phải chọc vào
  ] // cái đống trong này.
}
